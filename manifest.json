{
  "manifest_version": 3,
  "name": "Phone Linker",
  "version": "1.0",
  "description": "Erkennt Telefonnummern auf Webseiten und macht sie w√§hlbar.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "commands": {
    "toggle-phone-links": {
      "suggested_key": {
        "default": "Alt+Shift+P"
      },
      "description": "Telefonnummern-Erkennung ein-/ausschalten"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
